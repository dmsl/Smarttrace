		<activity android:name="smarttrace.settings.WifiPreferences" android:label="wPreferences">
		</activity>
		<activity android:name="smarttrace.settings.OnOffPreferences" android:label="On/OffPreferences">
		</activity>
		<activity android:name="smarttrace.settings.WifiOnOffPreferences" android:label="Wifi On/OffPreferences">
		</activity>
		<activity android:theme="@android:style/Theme.Dialog"
			android:name="Permision" android:label="Permision"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="smarttrace.filebrowser.AndroidFileBrowser"
			android:label="AndroidFileBrowser" android:screenOrientation="portrait">
		</activity>

		<activity android:theme="@android:style/Theme.Dialog"
			android:name="smarttrace.core.gps.EditTextBrowser" android:label="Input File"
			android:screenOrientation="portrait">
		</activity>
		<activity android:theme="@android:style/Theme.Dialog"
			android:label="Input File" android:screenOrientation="portrait"
			android:name=".smarttrace.core.wifi.WEditTextBrowserrowser">
		</activity>
		<activity android:name="smarttrace.core.wifi.WifiGraph" android:label="WifiGraph"
			android:screenOrientation="portrait">
		</activity>
	</application>
	

</manifest> 