			</intent-filter>
		</activity>
		<activity android:name="smarttrace.core.gps.MainActivity" android:label="@string/app_name"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="smarttrace.core.gps.ModeOfMap" android:label="ModeOfMap"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="smarttrace.core.gps.More" android:label="More"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".wifi.WifiMore" android:label="wMore"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="smarttrace.core.gps.PlotPath" android:label="PlotPath"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name="smarttrace.settings.Preferences" android:label="Preferences">
